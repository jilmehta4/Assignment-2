@model IEnumerable<FAQ>
@{
    //ViewData["Title"] = "NFL Teams";
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}

<nav class="navbar navbar-expand-sm justify-content-center">
    <ul class="navbar-nav">
        @foreach (Topic top in ViewBag.Topics)
        {
            <li class="nav-item">
                <a asp-action="Index"
               asp-route-activeCat="@ViewBag.ActiveCat"
               asp-route-activeTop="@top.TopicID"
               class="list-group-item @Active(top.TopicID,
                                           ViewBag.ActiveTop)">
                    @top.TopicName
                </a>
            </li>

        }


