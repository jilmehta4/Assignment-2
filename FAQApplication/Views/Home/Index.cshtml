<div class="row">
    <div class="col-sm-3">
        <div class="list-group">
            @foreach (Category cat in ViewBag.Categories)
            {
                <a asp-action="Index"
               asp-route-activeCat="@cat.CategoryID"
               asp-route-activeTop="@ViewBag.ActiveTop"
               class="list-group-item @Active(cat.CategoryID,
                                           ViewBag.ActiveCat)">
                    @cat.CategoryName
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-group">
            @foreach (FAQ faq in Model)
            {
                <li class="list-group-item">
                    <p><b>@faq.Question</b></p><p>@faq.Answer</p>
                    <p>Topic: @faq.Topic.TopicName</p><p>Category: @faq.Category.CategoryName</p>

                </li>
            }
        </ul>
    </div>
</div>
