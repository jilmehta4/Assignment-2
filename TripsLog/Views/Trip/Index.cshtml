@model Trip

@{
    ViewData["subhead"] = "Add Trip Destination and Dates";
}

<form method="post" asp-controller="Trip" asp-action="Index">
    <div class="form-group">
        <div><label>Destination:</label></div>
        <div>
            <input type="text" asp-for="Destination" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div><label>Accommodations</label></div>
        <div>
            <input type="text" asp-for="Accommodation" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div><label>Start Date:</label></div>
        <div>
            <input type="date" asp-for="StartDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div><label>End Date:</label></div>
        <div>
            <input type="date" asp-for="EndDate" class="form-control" />
        </div>
    </div>
    <div class="row pt-2 btn-group">
        <div class="col-sm-4">
             <button class="btn btn-secondary" type="submit">Next</button>
        </div>
        <div class="col-sm-4">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</form>